[global/vm]

include-file = ~/.config/polybar/colors.ini

[bar/main]
width = 100%
height = 24
fixed-center = true
monitor = ${env:MONITOR}

font-0 = PowerlineSymbols:size=12;5
font-1 = Inconsolata:pixelsize=11:style=Bold;2
font-2 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=10;2

border-size = 7
border-color = ${colors.bg}

modules-left = i3
modules-right = spotify separator wlan_i wlan separator eth_i eth separator cpu_i cpu separator memory_i memory separator battery_i battery separator pulseaudio_i pulseaudio separator date_i date

module-margin-left = 0
module-margin-right = 0

wm-restack = i3

background = ${colors.bg}
foreground = ${colors.fg}

cursor-click = pointer
cursor-scroll = ns-resize

[module/separator]
type = custom/text
content = " "

[module/i3]
type = internal/i3
pin-workspaces = true

format = <label-state> <label-mode>

label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.fg}
label-focused-background = ${colors.acc}

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.fg}
label-unfocused-background = ${colors.mbg}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.fg}
label-visible-background = ${colors.mbg}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.acc}
label-urgent-padding = 1

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
format-background = ${colors.black}
exec-if = ls $HOME/.local/bin/spotify_status.py
exec = $HOME/.local/bin/spotify_status.py

