[global/vm]

include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/modules.ini

[bar/main]
width = 100%
height = 24
fixed-center = true
monitor = ${env:MONITOR}

font-0 = Inconsolata for Powerline:pixelsize=11:style=BoldForPowerline;2
font-1 = Font Awesome 5 Free Regular:size=10;2
font-2 = Font Awesome 5 Free Solid:size=10;2

border-size = 7
border-color = ${colors.bg}

modules-left = i3 seperator title
modules-right = spotify_i spotify separator wlan_i wlan separator eth_i eth separator cpu_i cpu separator memory_i memory separator fs_i fs separator battery_i battery separator pulseaudio_i pulseaudio separator date_i date

module-margin-left = 0
module-margin-right = 0

wm-restack = i3

background = ${colors.bg}
foreground = ${colors.fg}

cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screenchange-reload = true
